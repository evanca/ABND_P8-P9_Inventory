<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_product_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/edit_product_price"
        app:layout_constraintEnd_toEndOf="@+id/edit_product_price"
        app:layout_constraintStart_toStartOf="@+id/edit_product_price"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_model" />

    <EditText
        android:id="@+id/edit_product_model"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/edit_product_name"
        app:layout_constraintEnd_toEndOf="@+id/edit_product_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_product_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_product_price"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/edit_product_quantity"
        app:layout_constraintEnd_toEndOf="@+id/edit_product_quantity"
        app:layout_constraintStart_toStartOf="@+id/edit_product_quantity"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_name" />

    <EditText
        android:id="@+id/edit_product_quantity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/edit_product_shelf"
        app:layout_constraintEnd_toEndOf="@+id/edit_product_shelf"
        app:layout_constraintStart_toStartOf="@+id/edit_product_shelf"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_price" />

    <EditText
        android:id="@+id/edit_product_shelf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/edit_product_supplier"
        app:layout_constraintEnd_toEndOf="@+id/edit_product_supplier"
        app:layout_constraintStart_toStartOf="@+id/edit_product_supplier"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_quantity" />

    <EditText
        android:id="@+id/edit_product_supplier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/edit_product_phone"
        app:layout_constraintEnd_toEndOf="@+id/edit_product_phone"
        app:layout_constraintStart_toStartOf="@+id/edit_product_phone"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_shelf" />

    <EditText
        android:id="@+id/edit_product_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_supplier" />

</android.support.constraint.ConstraintLayout>